pipeline {
    agent any
  triggers {
        // Check for changes every 5 minutes
        pollSCM('H/5 * * * *')
    }
    environment {
        PATH = "C:\\Program Files\\Docker\\Docker\\resources\\bin;${env.PATH}"
        DOCKER_HUB_USER = "michaelnkong"
        DOCKER_HUB_PASS = "HoMoZea4722%?"
        RENDER_API_KEY = "rnd_khRDdc5JDqJyZh1p1D7hQmaqfqkx"
        BACKEND_DEPLOY_HOOK = "https://api.render.com/deploy/srv-cvarm1vnoe9s73fek1qg?key=yq8p2SowWSs"
    }

    tools {
        git 'Default'
        maven 'Maven_3'
    }
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/master']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/MichaelNkong/association-backend.git',
                            credentialsId: 'github-credentials'
                        ]]
                    ])
                }
            }
        }

        stage('Build Backend') {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_HUB_USER}/cultural-association-backend:latest ."
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    sh "echo ${DOCKER_HUB_PASS} | docker login -u ${DOCKER_HUB_USER} --password-stdin"
                    sh "docker push ${DOCKER_HUB_USER}/cultural-association-backend:latest"
                }
            }
        }
        stage('Deploy to Render') {
                    steps {
                        script {
                            sh """
                                curl -X POST ${BACKEND_DEPLOY_HOOK} \\
                                -H "Authorization: Bearer ${RENDER_API_KEY}" \\
                                -H "Content-Type: application/json"
                            """
                        }
                    }
        }
    }
}
